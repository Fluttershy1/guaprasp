<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="top|left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/time_guap_bar_timer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#FFF"
        android:layout_marginTop="-4dp"
        android:maxHeight="36dp"
        android:layout_marginRight="10dp"
        android:textSize="26sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Нет загруженных данных"
        android:id="@+id/time_guap_bar_info"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time_guap_bar_timer"
        android:textColor="#FFF"
        android:maxHeight="20dp"
        android:layout_marginTop="-6dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00 00:00"
        android:id="@+id/time_guap_bar_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#FFF"
        android:textSize="13sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГУАП"
        android:id="@+id/time_guap_bar_info2"
        android:textColor="#FFF"
        android:textSize="13sp"
        android:layout_above="@+id/time_guap_bar_info"
        android:layout_alignParentRight="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="До начала"
        android:id="@+id/time_guap_bar_end"
        android:textColor="#FFF"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/time_guap_bar_timer"
        android:layout_alignParentTop="true"/>
</RelativeLayout>